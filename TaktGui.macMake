#!/bin/bash

rm -rf build dist setup.py

PYTHONPATH=src:gui:pythonExtra:$PYTHONPATH
export PYTHONPATH

PATH=/opt/local/bin:$PATH
export PATH

which python

ln -s GuiMain.py TaktGui.py
arch -i386 py2applet-2.7 --arch=i386 --iconfile=graphics/TaktGui.icns --make-setup TaktGui.py

if [ -d guiThumbs ] ; then
    :
else
    mkdir guiThumbs
fi
rm guiThumbs/*
arch -i386 /opt/local/bin/python setup.py py2app --includes ntpath --resources config,graphics,guiThumbs,/opt/local/bin/ffmpeg

rm TaktGui.py
